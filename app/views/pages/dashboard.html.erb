

<div class="container">
<h1>Dashboard</h1>
<h2>Places you have visited</h2>

<div id="places-carousel" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <% @places.each_with_index do |place, index| %>

    <div class="carousel-item <%= 'active' if index == 0 %>">
    <% if !place.menu_items.empty? && place.menu_items.last.photo.attached? %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path place.menu_items.last.photo.key %>')">
        <%= place.name %>
      </div>
    <% else %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
        <%= place.name %>
      </div>
    <% end %>
    </div>


    <% end %>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#places-carousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#places-carousel" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
</div>

<br>


<br>

<div class="container height- 200">
<h2>You Have Eaten</h2>
<div id="menu_items-carousel" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <% @menu_items.each_with_index do |menu_item, index| %>
      <div class="carousel-item <%= 'active' if index == 0 %>">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path menu_item.photo.key %>')">
          <%= menu_item.name %>
        </div>
      </div>
    <% end %>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#menu_items-carousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#menu_items-carousel" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
</div>
</div>

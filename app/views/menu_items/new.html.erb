<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="form-login">
        <h2>Add a menu item </h2>
        <%= form_with([@place, @menu_item]) do |f| %>
          <div class="form-inputs">
            <%= f.input :name, class: 'form-control' %>
            <%= f.input :category, class: 'form-control' %>
            <%= f.input :price, class: 'form-control' %>
            <%= f.input :visit_date, class: 'form-control' %>
            <%= f.input :rating, class: 'form-control' %>
            <%= f.input :description, class: 'form-control' %>
            <%= f.input :photo, as: :file, class: 'form-control' %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Create a menu item", class: "btn btn-ghost" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="form-login">
        <h2>Add a menu item </h2>
        <%= simple_form_for([@place, @menu_item]) do |f| %>
          <%= f.input :name, class: 'form-control' %>
          <%= f.input :category, class: 'form-control' %>
          <%= f.input :price, class: 'form-control' %>
          <%= f.input :visit_date, class: 'form-control' %>
          <%= f.input :rating, class: 'form-control' %>
          <%= f.input :description, class: 'form-control' %>
          <%= f.input :photo, as: :file %>
          <!-- [...] -->
        <% end %>
      </div>
    </div>
  </div>
</div>
